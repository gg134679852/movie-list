<div class="container">
  <h1>顯示購物車</h1>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">playdate</th>
        <th scope="col">Price</th>
        <th scope="col">quantity</th>
      </tr>
    </thead>
    <tbody id="tableItemPanel">
      {{#each cartRenderData.items}}
      <tr>
        <td>
          <div style="display: flow-root;">
            <span>{{this.name}}</span>
          </div>
        </td>
        <td>
          <div style="display: flow-root;">
            <span>{{this.date}}</span>
          </div>
        </td>
        <td>
          <p>$ {{this.price}}</p>
        </td>
        <td>
          <div style="display: flex;">
            <span style="margin: 0 20px;"id="quantity">
              {{this.CartItem.quantity}}
            </span>
          </div>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <div class="d-flex justify-content-end"id="totalPrice">
    <h2>Total: $</h2>
    <h2>{{totalPrice}}</h2>
  </div>
  <div class="row">
    <div class="col-md-4">
      <form action="/orders" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="text" class="form-control" id="name" placeholder="Enter name" name="name">
        </div>
        <div class="form-group">
          <label for="phone">Phone</label>
          <input type="text" class="form-control" id="phone" placeholder="Enter phone" name="phone">
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" placeholder="Enter email" name="email">
        </div>
        <div class="form-group">
          <label for="address">Address</label>
          <input type="text" class="form-control" id="address" placeholder="Enter address" name="address">
        </div>
        <input type="hidden" name="cartId" value="{{cartRenderData.id}}">
        <input type="hidden" name="amount" value="{{totalPrice}}">
        <input type="hidden" name="shipping_status" value="0">
        <input type="hidden" name="payment_status" value="0">
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>

