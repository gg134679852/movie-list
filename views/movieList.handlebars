  <!-- movie list -->
  <div class="d-flex">
  <div class="row" id="data-panel">
    {{#if movieDatas}}
      {{#each movieDatas}}
      <div class="col-sm-3">
        <div class="mb-2">
          <div class="card">
            <img src="data:image/png;base64,{{this.movieImg}}" class="card-img-top"
              alt="Movie Poster"
              with="500" heigh="750">
            <div class="card-body">
              <h5 class="card-title">{{this.movieTitle}}</h5>
              <br>
              <h5>250$</h5>
            </div>
            <div class="card-footer">
              <a href="/movieList/{{this.id}}/detailed">
                <button class="btn btn-primary btn-show-movie">More</button>
              </a>
              <div class="btn-group">
                <form action="/movieList/cart" method="POST">
                  <input type="hidden" name="productId" value="{{this.id}}">
                  <button type="submit" class="btn btn-success">購票</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
      {{else}}
      <div class="text-center">
      <h1>正在讀取資料 請稍後</h1>
      <div class="loader">
        <img src="http://static.demilked.com/wp-content/uploads/2016/06/gif-animations-replace-loading-screen-14.gif"
          alt="Loading..." />
          </div>
      </div>
      {{/if}}
      </div>
      {{#if totalPrice}}
        <nav class="col-md-3 d-none d-md-block sidebar ml-3 ">
          <div class="sidebar-sticky">
            <ul class="list-group list-group">
              <li class="list-group-item">
                {{#each cart.items}}
                <div class="row no-gutters">
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title">{{this.name}}</h5>
                      <p>${{this.price}}</p>
                      <div class="btn-group">
                        <form action="/cartItem/{{this.CartItem.id}}/add" method="POST">
                          <button type="submit" class="btn btn-sm btn-outline-secondary">+</button>
                        </form>
                        <span style="margin: 0 20px;">{{this.CartItem.quantity}}</span>
                        <form action="/cartItem/{{this.CartItem.id}}/sub" method="POST">
                          <button type="submit" class="btn btn-sm btn-outline-secondary">-</button>
                        </form>
        
                        <form action="/cartItem/{{this.CartItem.id}}?_method=DELETE" method="POST">
                          <button type="submit" class="btn btn-link">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
        
                      </div>
                    </div>
                  </div>
                </div>
                <hr>
                {{/each}}
              </li>
            </ul>
            <hr>
            <li class="list-group-item">
              Total: ${{totalPrice}}
              <a href="/movieList/cart"><button class="btn btn-primary">結帳</button></a>
            </li>
        
          </div>
        </nav>
      {{/if}}
      </div>
  </div>